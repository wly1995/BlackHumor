<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_head"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/after_fanju"
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bangumi_home_index_jp_bg"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/bangumi_home_index_jp_ic"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/after_guoman"
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bangumi_home_index_cn_bg"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/bangumi_home_index_cn_ic"/>
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:background="#11000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/tv"
            android:orientation="horizontal"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/after_shijianbiao"
                android:gravity="center_vertical"
                android:paddingLeft="55dp"
                android:drawableLeft="@drawable/bangumi_follow_ic_timeline"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="时间表"/>
            <LinearLayout
                android:layout_width="1dp"
                android:background="#4444"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/after_suoyin"
                android:gravity="center_vertical"
                android:paddingLeft="55dp"
                android:drawableLeft="@drawable/bangumi_follow_ic_index"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="索引"/>
        </LinearLayout>
        <LinearLayout
            android:background="#11000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/after_nofanju"
            android:background="@drawable/bangumi_home_follow_bangumi_guide"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
</LinearLayout>